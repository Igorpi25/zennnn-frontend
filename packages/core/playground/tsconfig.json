{
  "extends": "../tsconfig.vite.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "core-components": ["../src/index.ts"],
      "/@shared/*": ["../shared/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "../src/**/*.ts",
    "../shared/index.css",
    "../shared/**/*.ts",
    "../shared/**/*.json"
  ]
}
