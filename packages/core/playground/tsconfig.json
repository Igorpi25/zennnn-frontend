{
  "extends": "../tsconfig.vite.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@zennnn/core": ["../src/index.ts"],
      "/@shared/*": ["../shared/*"]
    },
    "types": ["vite/client", "@intlify/vite-plugin-vue-i18n/client"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "../src/**/*.ts",
    "../shared/index.css",
    "../shared/**/*.ts",
    "../shared/**/*.json"
  ]
}
